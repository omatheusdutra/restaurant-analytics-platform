{
    "name": "restaurant-analytics-backend",
    "version": "1.0.0",
    "description": "Backend API for Restaurant Analytics Platform",
    "main": "dist/index.js",
    "scripts": {
        "predev": "prisma generate && prisma db push",
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "npx prisma migrate deploy && node dist/index.js",
        "test": "jest --coverage --maxWorkers=50%",
        "test:watch": "jest --watch",
        "prisma:generate": "prisma generate",
        "prisma:studio": "prisma studio",
        "db:reset": "node scripts/db-reset.js",
        "test:controllers": "jest -c jest.controllers.config.js",
        "test:strict-100": "jest -c jest.strict.config.js"
    },
    "keywords": [
        "restaurant",
        "analytics",
        "api"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^6.18.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^22.7.5",
        "bcryptjs": "^2.4.3",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.4.0",
        "express-validator": "^7.2.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "pathe": "^2.0.3",
        "pg": "^8.12.0",
        "pino": "^9.5.0",
        "pino-http": "^10.3.0",
        "typescript": "^5.6.3"
    },
    "devDependencies": {
        "@types/compression": "^1.8.1",
        "@types/jest": "^29.5.12",
        "@types/supertest": "^6.0.2",
        "jest": "^29.7.0",
        "prisma": "^6.18.0",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "tsx": "^4.19.1"
    }
